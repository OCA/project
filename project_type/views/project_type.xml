<odoo>
    <!-- Sequences-->
    <record id="project_type_seq" model="ir.sequence">
      <field name="name">Project Type Sequence</field>
      <field name="code">project.type</field>
      <field name="prefix">0</field>
      <field name="padding">1</field>
    </record>

    <!-- List View-->
    <record id="project_type_view_list" model="ir.ui.view">
      <field name="name">Project_Type_List</field>
      <field name="model">project.type</field>
      <field name="arch" type="xml">
        <tree editable="top">
          <field name="type_sequence"
                 widget="handle"/>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <!-- Actions opening views on models -->
    <record id="project_type_action" model="ir.actions.act_window">
      <field name="name">Project Types</field>
      <field name="res_model">project.type</field>
      <field name="view_mode">tree</field>
    </record>

    <!-- Menu Items -->
    <menuitem
      name="Project Types"
      id="project_type_menu"
      parent="project.menu_project_config"
      sequence="16"
      action="project_type_action"/>
</odoo>
