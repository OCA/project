<odoo>
    <record id="view_project_time_type_rule_tree" model="ir.ui.view">
        <field name="name">project.time.type.rule.tree</field>
        <field name="model">project.time.type.rule</field>
        <field name="arch" type="xml">
            <tree string="Time Type Rule">
                <field name="employee_id" />
                <field name="department_id" />
                <field name="project_id" />
                <field name="project_type_id" />
                <field name="time_type_id" />
            </tree>
        </field>
    </record>
    <record id="view_project_time_type_rule_form" model="ir.ui.view">
        <field name="name">project.time.type.rule.form</field>
        <field name="model">project.time.type.rule</field>
        <field name="arch" type="xml">
            <form string="Time Type Rule">
                <sheet>
                    <group string="Filter">
                        <field name="employee_id" />
                        <field name="department_id" />
                        <field name="project_id" />
                        <field name="project_type_id" />
                    </group>
                    <group>
                        <field name="time_type_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="open_project_time_type_rule_tree" model="ir.actions.act_window">
        <field name="name">Time Type Rule</field>
        <field name="res_model">project.time.type.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_project_time_type_rule_tree" />
    </record>
    <menuitem
        action="open_project_time_type_rule_tree"
        id="menu_project_task_time_type_rule"
        parent="project.menu_project_config"
        sequence="12"
        groups="project.group_project_manager"
    />
</odoo>
