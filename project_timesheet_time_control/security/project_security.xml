<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data noupdate="0">

    <record id="account_analytic_line_visibility_rule" model="ir.rule">
        <field name="name">Account Analytic Line: employees: public or employee or following or assigned</field>
        <field name="model_id" ref="model_account_analytic_line"/>
        <field name="domain_force">['|',
                                        ('user_id', '=', user.id),
                                        '|',
                                        ('task_id.user_id', '=', user.id),
                                        '|',
                                            ('task_id.project_id.privacy_visibility', 'in', ['public', 'employees']),
                                            '&amp;',
                                                ('task_id.project_id.privacy_visibility', '=', 'followers'),
                                                ('task_id.message_follower_ids', 'in', [user.partner_id.id]),
                                    ]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

</data>
</openerp>
