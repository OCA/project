<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_task_form2_inherited" model="ir.ui.view">
        <field name="name">Add timesheet time controls</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited" />
        <field name="arch" type="xml">
            <!-- Main task form action buttons -->
            <div name="button_box" position="inside">
                <field
                    groups="hr_timesheet.group_hr_timesheet_user"
                    invisible="1"
                    name="show_time_control"
                />
                <button
                    class="oe_stat_button"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    icon="fa-play-circle text-success"
                    invisible="show_time_control != 'start'"
                    name="button_start_work"
                    string="Start work"
                    title="Start work"
                    type="object"
                />
                <button
                    class="oe_stat_button"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    icon="fa-stop-circle text-warning"
                    invisible="show_time_control != 'stop'"
                    name="button_end_work"
                    string="Stop work"
                    title="End work"
                    type="object"
                />
            </div>
            <!-- Sub-tree view for timesheet_ids -->
            <xpath
                expr="//field[@name='timesheet_ids']/tree//field[@name='date']"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath
                expr="//field[@name='timesheet_ids']/tree//field[@name='date']"
                position="after"
            >
                <field name="date_time" required="1" string="Date" />
            </xpath>
            <xpath expr="//field[@name='timesheet_ids']/tree" position="inside">
                <field invisible="1" name="show_time_control" />
                <button
                    class="oe_stat_button"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    icon="fa-play-circle text-success"
                    invisible="show_time_control != 'resume'"
                    name="button_resume_work"
                    tabindex="-1"
                    title="Resume work"
                    type="object"
                />
                <button
                    class="oe_stat_button"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    icon="fa-stop-circle text-warning"
                    invisible="show_time_control != 'stop'"
                    name="button_end_work"
                    tabindex="-1"
                    title="Stop work"
                    type="object"
                />
            </xpath>
            <xpath expr="//field[@name='timesheet_ids']/tree" position="attributes">
                <attribute name="default_order">
                    date_time</attribute>
            </xpath>
            <!-- Sub-kanban view for timesheet_ids -->
            <xpath
                expr="//field[@name='timesheet_ids']/kanban//*[@t-esc='record.date.value']"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath
                expr="//field[@name='timesheet_ids']/kanban//*[@t-esc='record.date.value']"
                position="after"
            >
                <field name="date_time" required="1" />
            </xpath>
            <xpath
                expr="//field[@name='timesheet_ids']/kanban//templates//field[@name='unit_amount']"
                position="after"
            >
                <field
                    groups="hr_timesheet.group_hr_timesheet_user"
                    invisible="1"
                    name="show_time_control"
                />
                <a
                    class="o_kanban_inline_block fa fa-lg fa-play-circle text-success"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    invisible="show_time_control != 'resume'"
                    name="button_resume_work"
                    string="Resume work"
                    tabindex="-1"
                    title="Resume work"
                    type="object"
                />
                <a
                    class="o_kanban_inline_block fa fa-lg fa-stop-circle text-warning"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    invisible="show_time_control != 'stop'"
                    name="button_end_work"
                    string="Stop work"
                    tabindex="-1"
                    title="Stop work"
                    type="object"
                />
            </xpath>
            <!-- Sub-form view for timesheet_ids -->
            <xpath
                expr="//field[@name='timesheet_ids']/form//field[@name='date']"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath
                expr="//field[@name='timesheet_ids']/form//field[@name='date']"
                position="after"
            >
                <field name="date_time" required="1" />
            </xpath>
            <xpath expr="//field[@name='timesheet_ids']/form/sheet/*" position="before">
                <div class="oe_button_box" name="button_box">
                    <field
                        groups="hr_timesheet.group_hr_timesheet_user"
                        invisible="1"
                        name="show_time_control"
                    />
                    <button
                        class="oe_stat_button"
                        context="{'show_created_timer': True}"
                        groups="hr_timesheet.group_hr_timesheet_user"
                        icon="fa-play-circle text-success"
                        invisible="show_time_control != 'resume'"
                        name="button_resume_work"
                        tabindex="-1"
                        title="Resume work"
                        type="object"
                    />
                    <button
                        class="oe_stat_button"
                        groups="hr_timesheet.group_hr_timesheet_user"
                        icon="fa-stop-circle text-warning"
                        invisible="show_time_control != 'stop'"
                        name="button_end_work"
                        tabindex="-1"
                        title="Stop work"
                        type="object"
                    />
                </div>
            </xpath></field>
    </record>
    <record id="view_task_kanban" model="ir.ui.view">
        <field name="name">Add timesheet time controls</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban" />
        <field name="arch" type="xml">
            <xpath expr="//*[hasclass('oe_kanban_bottom_left')]" position="inside">
                <field
                    groups="hr_timesheet.group_hr_timesheet_user"
                    invisible="1"
                    name="show_time_control"
                />
                <a
                    class="o_kanban_inline_block fa fa-lg fa-play-circle text-success"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    invisible="show_time_control != 'start'"
                    name="button_start_work"
                    tabindex="-1"
                    title="Start work"
                    type="object"
                />
                <a
                    class="o_kanban_inline_block fa fa-lg fa-stop-circle text-warning"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    invisible="show_time_control != 'stop'"
                    name="button_end_work"
                    tabindex="-1"
                    title="Stop work"
                    type="object"
                />
            </xpath></field>
    </record>
    <record id="view_task_tree2_inherited" model="ir.ui.view">
        <field name="name">Add timesheet time controls</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_tree2_inherited" />
        <field name="arch" type="xml">
            <tree position="inside">
                <field
                    groups="hr_timesheet.group_hr_timesheet_user"
                    invisible="1"
                    name="show_time_control"
                />
                <button
                    class="oe_stat_button"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    icon="fa-play-circle text-success"
                    invisible="show_time_control != 'start'"
                    name="button_start_work"
                    string="Start work"
                    tabindex="-1"
                    title="Start work"
                    type="object"
                />
                <button
                    class="oe_stat_button"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    icon="fa-stop-circle text-warning"
                    invisible="show_time_control != 'stop'"
                    name="button_end_work"
                    string="Stop work"
                    tabindex="-1"
                    title="End work"
                    type="object"
                />
            </tree></field>
    </record>
</odoo>
