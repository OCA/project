<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_task_form2" model="ir.ui.view">
        <field name="name">project.task.allowed_tags.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <field name="tag_ids" position="before">
                <field name="allowed_tag_ids" widget="many2many_tags" invisible="1" />
            </field>
            <field name="tag_ids" position="attributes">
                <attribute name="domain">[('id','in',allowed_tag_ids)]</attribute>
                <!-- make sure there is no project key in context -->
                <attribute name="context">{}</attribute>
            </field>
        </field>
    </record>
</odoo>
