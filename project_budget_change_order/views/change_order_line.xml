<odoo>
    <!-- List View-->
    <record id="project_budget_change_order_line_view_list" model="ir.ui.view">
        <field name="name">Change Order Line List</field>
        <field name="model">project.change_order_line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="budget_line_id"/>
                <field name="note"/>
                <field name="change_value" sum="Changed Amount"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="project_change_order_line_view_form" model="ir.ui.view">
        <field name="name">Change Order Line Form</field>
        <field name="model">project.change_order_line</field>
        <field name="arch" type="xml">
            <form string="Change Order Line">
                <sheet>
                    <field name="budget_id" invisible="1"/>
                    <group colspan="2" col="4">
                        <field name="budget_line_id"
                               options="{'no_create': True, 'no_create_edit': True}"
                               domain="[('crossovered_budget_id', '=', budget_id)]"/>
                        <field name="change_value"/>
                    </group>
                    <group string="Note">
                        <field name="note" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions opening views on models -->
    <record id="change_order_line_action" model="ir.actions.act_window">
        <field name="name">Change Order Lines</field>
        <field name="res_model">project.change_order_line</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
