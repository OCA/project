<odoo>
    <!-- List View-->
    <record id="change_order_stage_view_list" model="ir.ui.view">
        <field name="name">Change Order Stage List</field>
        <field name="model">project.change_order_stage</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="sequence"
                       widget="handle"
                       groups="base.group_no_one"/>
                <field name="name"/>
                <field name="description"/>
                <field name="fold"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="change_order_stage_view_form" model="ir.ui.view">
        <field name="name">Change Order Stage Form</field>
        <field name="model">project.change_order_stage</field>
        <field name="arch" type="xml">
            <form string="BW Change Stage">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Name" />
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <field name="description"/>
                        <field name="fold"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
