<odoo>
    <data noupdate="1">
        <record id="module_category_project_budget_change_order" model="ir.module.category">
            <field name="name">Project Change Orders</field>
            <field name="description">User access level for Project Change Orders</field>
            <field name="sequence">100</field>
        </record>
        <record id="group_project_budget_change_order_user" model="res.groups">
            <field name="name">Viewer</field>
            <field name="implied_ids" eval="[(4, ref('project.group_project_user'))]"/>
            <field name="category_id" ref="project_budget_change_order.module_category_project_budget_change_order"/>
        </record>
        <record id="group_project_budget_change_order_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('project_budget_change_order.group_project_budget_change_order_user'))]"/>
            <field name="category_id" ref="project_budget_change_order.module_category_project_budget_change_order"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>
