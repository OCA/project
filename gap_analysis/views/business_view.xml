<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
                                    
        <record id="view_business_requirement_form" model="ir.ui.view">
            <field name="name">business.requirement.form</field>
            <field name="model">business.requirement</field>
            <field name="type">form</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <form string="Business Analysis">
                    <header>
                        <button name="action_button_confirm" states="draft" string="Confirm" type="object" groups="gap_analysis.group_gap_analysis_user" class="oe_highlight"/>
                        <button name="action_button_back_draft" string="Back To Draft" type="object" attrs="{'invisible': [('state', 'in', ('draft','done'))]}" groups="gap_analysis.group_gap_analysis_user" class="oe_highlight"/>
                        <button name="action_button_approve" states="confirmed" string="Approve" type="object" groups="gap_analysis.group_gap_analysis_manager" class="oe_highlight"/>
                        <button name="action_button_done" states="approved" string="Done" type="object" groups="gap_analysis.group_gap_analysis_manager" class="oe_highlight"/>
                        <button name="action_button_cancel" string="Cancel" type="object" attrs="{'invisible': [('state', 'in', ('done','cancel'))]}" groups="gap_analysis.group_gap_analysis_user" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved,done,cancel"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name" class="oe_inline" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                 <field name="description"/>
                                 <field name="estimated_time_total"/>
                                 <field name="summary_estimation"/>
                             </group>
                        </group>
                        
                        <notebook>
                            <page string="Business Analysis">
                                <group string="Customer Story">
                                     <field name="business_requirement" widget="html" nolabel="1"/>
                                </group>
                                <group string="Scenario">
                                    <field name="scenario" widget="html" nolabel="1"/>
                                </group>
                                <group string="Gap">
                                     <field name="gap" widget="html" nolabel="1"/>
                                </group>
                                <group string="Summary Estimation Note">
                                     <field name="summary_estimation_note" widget="html" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Estimation Lines">
                                <field name="draft_estimation_lines" domain="[('business_requirement_line_id', '='. False)]" context="{'tree_view_ref':'view_business_estimation_line_tree'}"/>
                            </page>
                            <page string="Sub Business Analysis">
                                <field name="business_requirement_ids" readonly="1" context="{'form_view_ref':'view_business_requirement_form', 'tree_view_ref':'view_business_requirement_tree'}"/>
                            </page>
                            <page string="Other Information">
                                <group col="4">
                                    <field name="categ_id"/>
                                    <field name="parent_id"/>
                                    <field name="level"/>
                                    <field name="drop"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_business_requirement_tree" model="ir.ui.view">
            <field name="name">business.requirement.tree</field>
            <field name="model">business.requirement</field>
            <field name="arch" type="xml">
                <tree string="Business Analysis">
                    <field name="sequence"/>
                     <field name="name"/>
                     <field name="description"/>
                     <field name="categ_id"/>
                     <field name="estimated_time_total"/>
                     <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_business_estimation_line_tree" model="ir.ui.view">
            <field name="name">business.estimation.line.tree</field>
            <field name="model">business.estimation.line</field>
            <field name="arch" type="xml">
                <tree string="Bus. Estimation Lines" editable="bottom" default_order="sequence,name">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="user_id"/>
                    <field name="estimated_time"/>
                </tree>
            </field>
        </record>

        <record id="view_business_requirement_search" model="ir.ui.view">
            <field name="name">business.requirement.search</field>
            <field name="model">business.requirement</field>
            <field name="arch" type="xml">
                <search string="Business Analysis">
                    <field name="name" string="Name"/>
                    <field name="sequence" string="Sequence"/>
                    <group expand="0" string="Group By">
                        <filter string="Category" icon="terp-go-home"  context="{'group_by':'categ_id'}"/>
                        <filter string="State" icon="terp-go-home" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_business_requirement_category_form" model="ir.ui.view">
            <field name="name">business.requirement.category.form</field>
            <field name="model">business.requirement.category</field>
            <field name="type">form</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <form string="Business Analysis">
                    <sheet>
                        <group>
                             <field name="name"/>
                             <field name="parent_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_business_requirement_category_tree" model="ir.ui.view">
            <field name="name">business.requirement.category.form</field>
            <field name="model">business.requirement.category</field>
            <field name="type">tree</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <tree string="Business Analysis">
                     <field name="name"/>
                     <field name="parent_id"/>
                </tree>
            </field>
        </record>

        <record id="view_business_estimation_type_form" model="ir.ui.view">
            <field name="name">business.estimation.type.form</field>
            <field name="model">business.estimation.type</field>
            <field name="type">form</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <form string="Bus. Estimation Type">
                    <group>
                         <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_business_estimation_type_tree" model="ir.ui.view">
            <field name="name">business.estimation.type.form</field>
            <field name="model">business.estimation.type</field>
            <field name="type">tree</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <tree string="Bus. Estimation Type">
                     <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_business_requirement_tree">
            <field name="name">Business Analysis</field>
            <field name="res_model">business.requirement</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window" id="action_business_requirement_category_tree">
            <field name="name">Bus. Req. Category</field>
            <field name="res_model">business.requirement.category</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window" id="action_business_estimation_type_tree">
            <field name="name">Bus. Estimation Type</field>
            <field name="res_model">business.estimation.type</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
        </record>

        <!-- Top menu item -->
        <menuitem id="menu_gap_root"  name="Gap Analysis"  groups="gap_analysis.group_gap_analysis_user" sequence="30"/>

        <menuitem id="menu_business_requirement" name="Business Analysis" groups="gap_analysis.group_gap_analysis_user" parent="menu_gap_root" sequence="8"/>

        <menuitem id="menu_gap_configuration" name="Configuration" groups="gap_analysis.group_gap_analysis_user" parent="menu_gap_root" sequence="8"/>

        <menuitem id="menu_business_requirement1" groups="gap_analysis.group_gap_analysis_user" action="action_business_requirement_tree" 
            parent="menu_business_requirement" sequence="10"/>

        <menuitem id="menu_business_requirement_category" groups="gap_analysis.group_gap_analysis_user" action="action_business_requirement_category_tree" 
            parent="menu_gap_configuration" sequence="10"/>

        <menuitem id="menu_business_estimation_type_tree" groups="gap_analysis.group_gap_analysis_user" action="action_business_estimation_type_tree" 
            parent="menu_gap_configuration" sequence="10"/>

    </data>
</openerp>
