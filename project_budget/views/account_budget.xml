<odoo>
    <record id="project_account_budget_inherit_form" model="ir.ui.view">
        <field name="name">project.account.budget.inherit.form</field>
        <field name="model">crossovered.budget</field>
        <field name="inherit_id" ref="account_budget_oca.crossovered_budget_view_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <field name="creating_user_id" position="after">
                <field name="project_id"/>
                <field name="analytic_account_id"/>
            </field>
            <field name="crossovered_budget_line_ids" position="attributes">
              <attribute name="context">{'default_date_from': date_from,'default_date_to': date_to, 'default_analytic_account_id': analytic_account_id}</attribute>
            </field>
        </field>
    </record>
</odoo>
