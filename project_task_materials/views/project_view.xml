<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_project_task_form_materials" model="ir.ui.view">
        <field name="name">project.task.form.materials</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Materials used" attrs="{'invisible': [('project_id', '=', False)]}">
                    <!--Materials used-->
                    <field name="material_ids" groups="project.group_time_work_estimation_tasks">
                        <tree string="Materials used" editable="top">
                        <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="uom_id" groups="product.group_uom"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

</odoo>
