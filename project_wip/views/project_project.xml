<odoo>

    <record id="edit_project" model="ir.ui.view">
        <field name="name">edit.project</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button class="oe_stat_button" string="Value Stream" type="object" name="view_value_stream" icon="fa-file"/>
            </xpath>
        </field>
    </record>

    <record id="project_project_kanban_view" model="ir.ui.view">
        <field name="name">project.project.kanban</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_kanban_card_manage_section')]" position="inside">
                <div>
                    <a name="view_value_stream" type="object">
                        Value Stream
                    </a>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
