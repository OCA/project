<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="hr_timesheet.act_hr_timesheet_report" model="ir.actions.act_window">
            <field
                name="domain"
            >[('project_id', '!=', False), ('product_id', '=', False)]</field>
        </record>

        <record
            id="hr_timesheet.timesheet_action_report_by_project"
            model="ir.actions.act_window"
        >
            <field
                name="domain"
            >[('project_id', '!=', False), ('product_id', '=', False)]</field>
        </record>

        <record
            id="hr_timesheet.timesheet_action_report_by_task"
            model="ir.actions.act_window"
        >
            <field
                name="domain"
            >[('project_id', '!=', False), ('product_id', '=', False)]</field>
        </record>

        <record
            id="sale_timesheet.timesheet_action_billing_report"
            model="ir.actions.act_window"
        >
            <field
                name="domain"
            >[('project_id', '!=', False), ('product_id', '=', False)]</field>
        </record>


        <record id="consumable_action_report_by_project" model="ir.actions.act_window">
            <field name="name">Material/Consumable By Project</field>
            <field name="res_model">account.analytic.line</field>
            <field
                name="domain"
            >[('project_id', '!=', False), ('product_id', '!=', False)]</field>
            <field name="context">{'search_default_groupby_project': 1}</field>
            <field name="search_view_id" ref="project_consumable_product_line_search" />
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No activities found.
              </p><p>
                Track your consumable products by projects every day and analyse associated cost.
              </p>
            </field>
        </record>

        <record
            id="consumable_action_view_report_by_project_pivot"
            model="ir.actions.act_window.view"
        >
            <field name="sequence" eval="5" />
            <field name="view_mode">pivot</field>
            <field name="view_id" ref="project_consumable_product_line_pivot" />
            <field name="act_window_id" ref="consumable_action_report_by_project" />
        </record>

        <record
            id="consumable_action_view_report_by_project_graph"
            model="ir.actions.act_window.view"
        >
            <field name="sequence" eval="6" />
            <field name="view_mode">graph</field>
            <field name="view_id" ref="project_consumable_product_line_graph" />
            <field name="act_window_id" ref="consumable_action_report_by_project" />
        </record>

        <record
            id="consumable_action_view_report_by_project_tree"
            model="ir.actions.act_window.view"
        >
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="project_consumable_product_line_tree" />
            <field name="act_window_id" ref="consumable_action_report_by_project" />
        </record>

        <record
            id="consumable_action_view_report_by_project_form"
            model="ir.actions.act_window.view"
        >
            <field name="sequence" eval="15" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="project_consumable_product_line_form" />
            <field name="act_window_id" ref="consumable_action_report_by_project" />
        </record>

        <menuitem
            id="menu_timesheets_reports_consumables"
            name="Materials/Consumables"
            parent="hr_timesheet.menu_timesheets_reports"
            groups="hr_timesheet.group_timesheet_manager"
            sequence="30"
        />

        <menuitem
            id="timesheet_menu_report_consumable_by_project"
            parent="menu_timesheets_reports_consumables"
            action="consumable_action_report_by_project"
            name="By Project"
            sequence="10"
        />

    </data>
</odoo>
