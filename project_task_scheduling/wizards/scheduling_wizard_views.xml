<odoo>

    <record id="project_task_scheduling_wizard_view_form" model="ir.ui.view">
        <field name="name">project.task.scheduling.wizard.form</field>
        <field name="model">project.task.scheduling.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <field name="date_start"/>
                    <field name="cooling_ratio"/>
                    <field name="task_option"/>
                </group>
                <group>
                    <field name="task_ids" nolabel="1"/>
                </group>

                <footer>
                    <button name="action_accept" type="object" string="Accept"
                            class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="project_task_scheduling_wizard_action"
            model="ir.actions.act_window">
        <field name="name">Project task scheduler</field>
        <field name="res_model">project.task.scheduling.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem action="project_task_scheduling_wizard_action"
              id="project_task_scheduling_wizard_menu"
              parent="project_task_scheduling_menu"
              sequence="10"/>

</odoo>
