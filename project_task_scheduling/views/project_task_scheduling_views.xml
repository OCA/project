<odoo>

    <record id="project_task_scheduling_view_form" model="ir.ui.view">
        <field name="name">project.task.scheduling.form</field>
        <field name="model">project.task.scheduling</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="proposal_id"/>
                        <field name="employee_id"/>
                        <field name="task_id"/>
                    </group>
                    <group>
                        <field name="datetime_start"/>
                        <field name="datetime_stop"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="project_task_scheduling_view_tree" model="ir.ui.view">
        <field name="name">project.task.scheduling.tree</field>
        <field name="model">project.task.scheduling</field>
        <field name="arch" type="xml">
            <tree>
                <field name="proposal_id"/>
                <field name="employee_id"/>
                <field name="task_id"/>
                <field name="datetime_start"/>
                <field name="datetime_stop"/>
                <field name="delayed"/>
            </tree>
        </field>
    </record>

    <record id="project_task_scheduling_view_timeline" model="ir.ui.view">
        <field name="name">project.task.scheduling.timeline</field>
        <field name="model">project.task.scheduling</field>
        <field name="arch" type="xml">
            <timeline date_start="datetime_start"
                      date_stop="datetime_stop"
                      default_group_by="employee_id"
                      event_open_popup="true"
                      colors="#ec7063: delayed == true;"
            />
        </field>
    </record>

</odoo>
