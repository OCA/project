<odoo>
    <record model="ir.ui.view" id="project_task_schedule_form_view">
        <field
            name="name"
        >project.task.schedule.form (in project_task_recurring)</field>
        <field name="model">project.task.schedule</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" nolabel="1" readonly="1" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Recurrence Name" />
                        </h1>
                    </div>
                    <group>
                        <group string="General">
                            <field
                                name="project_id"
                                invisible="[('project_id', '!=', False)]"
                            />
                            <field name="task_template_id" />
                        </group>
                        <group string="Recurrency">
                            <field name="recurrence_type" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter" />
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="project_task_schedule_search_view">
        <field
            name="name"
        >project.task.schedule.search (in project_task_recurring)</field>
        <field name="model">project.task.schedule</field>
        <field name="arch" type="xml">
            <search>
                <field name="project_id" />
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="project_task_schedule_tree_view">
        <field
            name="name"
        >project.task.schedule.tree (in project_task_recurring)</field>
        <field name="model">project.task.schedule</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'">
                <field name="name" />
                <field name="project_id" />
                <field name="recurrence_type" widget="label_selection" />
                <field name="last_recurrency_date" />
                <field name="next_recurrency_date" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="project_task_schedule_act_window">
        <field name="name">Project Task Schedule</field>
        <field name="res_model">project.task.schedule</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <record model="ir.ui.menu" id="project_task_schedule_menu">
        <field name="name">Project Task Schedule</field>
        <field name="parent_id" ref="project.menu_project_config" />
        <field name="action" ref="project_task_schedule_act_window" />
        <field name="sequence" eval="16" />
    </record>
</odoo>
