<odoo noupdate="1">
    <!-- Recurring Tasks -->
    <record id="project_task_check_invoicing" model="project.task">
        <field name="planned_hours" eval="1.0" />
        <field name="user_id" ref="base.user_demo" />
        <field name="priority">0</field>
        <field
            name="project_id"
            ref="project_task_recurring.project_project_recurrence_template"
        />
        <field name="name">Check Invoices</field>
        <field name="stage_id" ref="project.project_stage_0" />
        <field name="color">4</field>
    </record>
    <record id="project_task_call_customer" model="project.task">
        <field name="planned_hours" eval="2.0" />
        <field name="user_id" ref="base.user_demo" />
        <field name="priority">0</field>
        <field
            name="project_id"
            ref="project_task_recurring.project_project_recurrence_template"
        />
        <field name="name">Call Customer</field>
        <field name="stage_id" ref="project.project_stage_1" />
        <field name="color">4</field>
    </record>
</odoo>
