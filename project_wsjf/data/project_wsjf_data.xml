<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project.project_project_data" model="project.project">
        <field name="active" eval="True"/>
        <field name="business_value" eval="2"/>
        <field name="time_criticality" eval="2"/>
        <field name="risk_reduction" eval="2"/>
        <field name="internal_pressure" eval="8"/>
        <field name="job_size" eval="1"/>
