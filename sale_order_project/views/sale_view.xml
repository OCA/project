<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sales.order.project.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <group name="technical" position="after">
                <group name="project" string="Project">
                    <field name="related_project_id" />
                </group>
            </group>
            <xpath expr="//button[@name='toggle_active']" position="before">
                <button class="oe_inline oe_edit_only" type="object" name="action_create_project" string="Create Project" groups="sale.group_analytic_accounting,project.group_project_user" attrs="{'invisible':['|',('state','!=','draft'),('related_project_id','!=',False)]}" />
            </xpath>
        </field>
    </record>
</odoo>
