<openerp>
<data>

<record id="project_action_item_timesheet_form" model="ir.ui.view">
    <field name="name">project_action_item_timesheet.form</field>
    <field name="model">project.action.item.timesheet</field>
    <field name="arch" type="xml">
        <form string="Update Action Item and Create Timesheet Line" version="7.0">
            <group name="main">
                <field name="name" widget="text"/>
                <field name="date"/>
                <field name="hours" widget="float_time"/>
                <field name="user_id"/>
                <field name="to_invoice"/>
                <field name="completed"/>
            </group>
            <footer>
                <button name="update_action_create_timesheet" type="object"
                    string="Update Action and Create Timesheet" class="oe_highlight"/>
                <button special="cancel" string="Cancel" class="oe_link"/>
            </footer>
        </form>
    </field>
</record>

<record id="project_action_item_timesheet_action" model="ir.actions.act_window">
    <field name="name">Update Action Item and Create Timesheet Line</field>
    <field name="res_model">project.action.item.timesheet</field>
    <field name="view_type">form</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

</data>
</openerp>
