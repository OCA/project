<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="res_company_view" model="ir.ui.view">
            <field name="name">project_recalculate.company_view</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="project.task_company"/>
            <field name="arch" type="xml">
                <field name="project_time_mode_id" position="after">
                    <field name="workday_begin" widget="float_time"/>
                    <field name="workday_end" widget="float_time"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
