<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_business_requirement_form" model="ir.ui.view">
            <field name="name">business.requirement.form</field>
            <field name="model">business.requirement</field>
            <field name="inherit_id" ref="business_requirement.view_business_requirement_form"/>
            <field name="arch" type="xml">
                <xpath expr='//field[@name="description"]' position='after'>
                    <field name="estimated_time_total"/>
                    <field name="summary_estimation"/>
                </xpath>
                <xpath expr='//group[@string="Gap"]' position='after'>
                    <group string="Summary Deliverable Note">
                         <field name="summary_estimation_note" widget="html" nolabel="1"/>
                    </group>
                </xpath>
                <xpath expr='//page[@string="Business Requirement"]' position='after'>
                    <page string="Deliverable Lines">
                        <field name="deliverable_lines" domain="[('business_requirement_line_id', '='. False)]" context="{'tree_view_ref':'view_business_deliverable_line_tree'}"/>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_business_requirement_tree" model="ir.ui.view">
            <field name="name">business.requirement.tree</field>
            <field name="model">business.requirement</field>
            <field name="inherit_id" ref="business_requirement.view_business_requirement_tree"/>
            <field name="arch" type="xml">
                <xpath expr='//field[@name="categ_id"]' position='after'>
                    <field name="estimated_time_total"/>
                </xpath>
            </field>
        </record>

        <record id="view_business_deliverable_line_tree" model="ir.ui.view">
            <field name="name">business.deliverable.line.tree</field>
            <field name="model">business.deliverable.line</field>
            <field name="arch" type="xml">
                <tree string="Business Deliverable Lines" editable="bottom" default_order="sequence,name">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="product_id"/>
                     <field name="resouce_type"/>
                    <field name="qty" attrs="{'readonly':[('resouce_type','=','time')]}"/>
                    <field name="estimated_time" attrs="{'readonly':[('resouce_type','=','resource')]}"/>
                    <field name="uom_id"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>

        <record id="view_business_deliverable_type_form" model="ir.ui.view">
            <field name="name">business.deliverable.type.form</field>
            <field name="model">business.deliverable.type</field>
            <field name="type">form</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <form string="Business Deliverable Type">
                    <group>
                         <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_business_deliverable_type_tree" model="ir.ui.view">
            <field name="name">business.deliverable.type.form</field>
            <field name="model">business.deliverable.type</field>
            <field name="type">tree</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <tree string="Bus. deliverable Type">
                     <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_business_deliverable_type_tree">
            <field name="name">Bus. Deliverable Type</field>
            <field name="res_model">business.deliverable.type</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_business_deliverable_type_tree" groups="business_requirement.group_business_requirement_user" action="action_business_deliverable_type_tree" 
            parent="business_requirement.menu_business_configuration" sequence="10"/>

    </data>
</openerp>
