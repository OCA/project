<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_business_requirement_form" model="ir.ui.view">
            <field name="name">business.requirement.form</field>
            <field name="model">business.requirement</field>
            <field name="inherit_id" ref="business_requirement.view_business_requirement_form"/>
            <field name="arch" type="xml">
                <xpath expr='//field[@name="description"]' position='after'>
                    <field name="resource_time_total"/>
                </xpath>
                <xpath expr='//page[@string="Business Requirement"]' position='after'>
                    <page string="Deliverable Lines">
                        <field name="deliverable_lines" domain="[('business_requirement_line_id', '='. False)]" context="{'tree_view_ref':'view_business_requirement_deliverable_tree', 'form_view_ref': 'view_business_requirement_deliverable_form'}"/>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_business_requirement_tree" model="ir.ui.view">
            <field name="name">business.requirement.tree</field>
            <field name="model">business.requirement</field>
            <field name="inherit_id" ref="business_requirement.view_business_requirement_tree"/>
            <field name="arch" type="xml">
                <xpath expr='//field[@name="categ_id"]' position='after'>
                    <field name="resource_time_total"/>
                </xpath>
            </field>
        </record>

        <record id="view_business_requirement_deliverable_tree" model="ir.ui.view">
            <field name="name">business.requirement.deliverable.tree</field>
            <field name="model">business.requirement.deliverable</field>
            <field name="arch" type="xml">
                <tree string="Business Requirement Deliverable" default_order="sequence,name">
                    <field name="sequence" widget="handle"/>
                    <field name="description"/>
                    <field name="product_id"/>
                    <field name="uom_id"/>
                    <field name="qty"/>
                    <field name="resource_time"/>
                </tree>
            </field>
        </record>

        <record id="view_business_requirement_resource_tree" model="ir.ui.view">
            <field name="name">business.requirement.resource.tree</field>
            <field name="model">business.requirement.resource</field>
            <field name="arch" type="xml">
                <tree string="Business Requirement Resource" editable="bottom" default_order="sequence">
                    <field name="sequence" widget="handle"/>
                    <field name="description"/>
                    <field name="product_id"/>
                    <field name="uom_id"/>
                    <field name="resource_type"/>
                    <field name="task_type" attrs="{'required':[('resource_type','=','task')]}"/>
                    <field name="qty" attrs="{'readonly':[('resource_type','=','task')]}"/>
                    <field name="resource_time" attrs="{'readonly':[('resource_type','=','procurement')]}"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>

        <record id="view_business_requirement_deliverable_form" model="ir.ui.view">
            <field name="name">business.requirement.deliverable.form</field>
            <field name="model">business.requirement.deliverable</field>
            <field name="type">form</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <form string="Business Requirement Task Type">
                    <group col="4">
                         <field name="description"/>
                         <field name="product_id"/>
                         <field name="uom_id"/>
                         <field name="qty"/>
                         <field name="resource_time"/>
                    </group>
                    <group string="Resource Lines">
                        <field name="resource_ids" context="{'tree_view_ref':'view_business_requirement_resource_tree'}" nolabel="1"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_business_requirement_task_type_form" model="ir.ui.view">
            <field name="name">business.requirement.task.type.form</field>
            <field name="model">business.requirement.task.type</field>
            <field name="type">form</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <form string="Business Requirement Task Type">
                    <group>
                         <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_business_requirement_task_type_tree" model="ir.ui.view">
            <field name="name">business.requirement.task.type.form</field>
            <field name="model">business.requirement.task.type</field>
            <field name="type">tree</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <tree string="Business Requirement Task Type">
                     <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_business_requirement_task_type_tree">
            <field name="name">Bus. Deliverable Type</field>
            <field name="res_model">business.requirement.task.type</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_business_requirement_task_type_tree" groups="business_requirement.group_business_requirement_user" action="action_business_requirement_task_type_tree" 
            parent="business_requirement.menu_business_configuration" sequence="10"/>

    </data>
</openerp>
