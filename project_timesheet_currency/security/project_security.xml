<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <delete id="project.project_comp_rule" model="ir.rule"/>
        <record model="ir.rule" id="project.project_comp_rule">
            <field name="name">Project: multi-company</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',
                ('company_id', '=', False),
                ('company_id', 'in', [c.id for c in user.company_ids]),
                ]
            </field>
        </record>

        <delete id="project.task_comp_rule" model="ir.rule"/>
        <record model="ir.rule" id="project.task_comp_rule">
        <field name="name">Project/Task: multi-company</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',
                ('company_id', '=', False),
                ('company_id', 'in', [c.id for c in user.company_ids]),
                ]
        </field>
    </record>
    </data>
</odoo>