<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project.res_config_settings_view_form" />
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='tasks_management']" position="inside">
                <div
                    class="col-lg-6 col-12 o_setting_box"
                    id="default_collaborators_task_assigned"
                >
                    <div class="o_setting_left_pane">
                        <field name="collaborators_task_assigned" />
                    </div>
                    <div class="o_setting_right_pane">
                        <span
                            class="o_form_label"
                        >Add Internal Collaborators on Task Assigned</span>
                        <div class="text-muted" />
                    </div>
                </div>
                <div
                    class="col-lg-6 col-12 o_setting_box"
                    id="default_collaborators_activity_assigned"
                >
                    <div class="o_setting_left_pane">
                        <field name="collaborators_activity_assigned" />
                    </div>
                    <div class="o_setting_right_pane">
                        <span
                            class="o_form_label"
                        >Add Internal Collaborators on Activity Assigned</span>
                        <div class="text-muted" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
