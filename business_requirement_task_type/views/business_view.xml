<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_business_requirement_resource_tree" model="ir.ui.view">
            <field name="name">business.requirement.resource.tree</field>
            <field name="model">business.requirement.resource</field>
            <field name="inherit_id" ref="business_requirement_deliverable.view_business_requirement_resource_tree"/>
            <field name="arch" type="xml">
                <xpath expr='//field[@name="description"]' position='after'>
                    <field name="task_type" attrs="{'required':[('resource_type','=','task')]}"/>
                </xpath>
            </field>
        </record>

        <record id="view_business_requirement_cost_structure_line_tree" model="ir.ui.view">
            <field name="name">business.requirement.cost.structurey.tree</field>
            <field name="model">business.requirement.cost.structure.line</field>
            <field name="inherit_id" ref="business_requirement_price.view_business_requirement_cost_structure_line_tree"/>
            <field name="type">tree</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <xpath expr='//field[@name="user_id"]' position='after'>
                    <field name="task_type"/>
                </xpath>
            </field>
        </record>

        <record id="view_business_requirement_task_type_form" model="ir.ui.view">
            <field name="name">business.requirement.task.type.form</field>
            <field name="model">business.requirement.task.type</field>
            <field name="type">form</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <form string="Business Requirement Task Type">
                    <group>
                         <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_business_requirement_task_type_tree" model="ir.ui.view">
            <field name="name">business.requirement.task.type.form</field>
            <field name="model">business.requirement.task.type</field>
            <field name="type">tree</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <tree string="Business Requirement Task Type">
                     <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_business_requirement_task_type_tree">
            <field name="name">Bus. Deliverable Type</field>
            <field name="res_model">business.requirement.task.type</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_business_requirement_task_type_tree" groups="business_requirement.group_business_requirement_user" action="action_business_requirement_task_type_tree" 
            parent="business_requirement.menu_business_configuration" sequence="10"/>

    </data>
</openerp>
