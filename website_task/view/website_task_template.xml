<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="task-thank-you" name="Task Thank You">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_structure"/>
                    <div class="container">
                        <h1>Thanks!</h1>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="alert alert-success">
                                    Your message has been sent successfully.
                                    <button type="button" class="close"
                                            data-dismiss="alert">&amp;times;
                                    </button>
                                </div>
                                <p>
                                    We will get back to you shortly.
                                </p>
                                <p class="mt64">
                                    If you have an emergency, do not hesitate to
                                    contact us by phone:
                                </p>
                                <ul class="list-unstyled">
                                    <li>
                                        <i class="fa fa-phone"></i>
                                        :
                                        <span t-field="res_company.phone"/>
                                    </li>
                                    <li>
                                        <i class="fa fa-envelope"></i>
                                        :
                                        <span t-field="res_company.email"/>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-4">
                                <t t-call="website.company_description"/>
                            </div>
                        </div>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </template>

        <template id="new-task" name="New Ticket" page="True">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_structure">
                        <section class="pt8 pb8">
                            <div class="container">
                                <div class="row s_nb_column_fixed">
                                    <div class="col-lg-12 s_title pt16 pb16">
                                        <h1>New Ticket</h1>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="container mt-2">
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="oe_structure">
                                    <section class="s_text_block">
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <p>Please fill all
                                                        the fields to
                                                        create a new
                                                        Ticket
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                </div>

                                <div>
                                    <form action="/website_form/"
                                          method="post"
                                          data-model_name="project.task"
                                          data-success_page="/task-thank-you"
                                          class="s_website_form container-fluid mt32"
                                          enctype="multipart/form-data"
                                          data-editable-form="false">
                                          <div class="form-group row form-field o_website_form_required_custom">
                                             <label for="mail_addresses" class="col-lg-3 col-md-4 col-form-label">
                                                 E-mail:
                                              </label>
                                              <div>
                                                  <div class="col-lg-7 col-md-8">
                                                      <input type="text"
                                                             class="form-control o_website_form_input"
                                                             name="mail_addresses"
                                                             t-att-value="request.env.user.email"
                                                             required=""
                                                             readonly="1" />
                                                  </div>

                                              </div>
                                          </div>
                                          <div class="form-group row form-field o_website_form_required_custom">
                                             <label for="project_id" class="col-lg-3 col-md-4 col-form-label">
                                                 Project:
                                              </label>
                                              <div>
                                                  <div class="col-lg-7 col-md-8">
                                                    <select class="form-control" name="project_id">
                                                       <t t-foreach="project_filters" t-as="project">
                                                            <option t-attf-value="#{project.id}"><t t-esc="project.name"/></option>
                                                       </t>
                                                   </select>
                                                  </div>

                                              </div>
                                          </div>

                                        <div class="form-group row form-field o_website_form_required_custom">
                                            <label class="col-lg-3 col-md-4 col-form-label"
                                                   for="name">Subject:
                                            </label>
                                            <div class="col-lg-7 col-md-8">
                                                <input type="text"
                                                       class="form-control o_website_form_input"
                                                       name="name"
                                                       t-att-value="request.params.get('name', '')"
                                                       required="" />
                                            </div>
                                        </div>
                                        <div class="form-group row form-field o_website_form_required_custom">
                                                     <label class="col-lg-3 col-md-4 col-form-label"
                                                            for="name">Priority:
                                                     </label>
                                                     <div class="col-lg-7 col-md-8">
                                                         <select class="form-control" name="priority">
                                                           <option value="0">Low</option>
                                                           <option value="1">Normal</option>
                                                           <option value="2">High</option>
                                                           <option value="3">Very High</option>
                                                         </select>
                                                     </div>
                                        </div>

                                        <div class="form-group row form-field o_website_form_required_custom">
                                                <label class="col-lg-3 col-md-4 col-form-label"
                                                       for="description">
                                                    Description:
                                                </label>
                                            <div class="col-lg-7 col-md-8">
                                                <textarea
                                                        class="form-control o_website_form_input"
                                                        name="description" style="max-width: 1150px;  width: 410px; height: 250px;"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group row form-field o_website_form_custom">
                                            <div class="col-lg-3 col-md-4 text-right" style="margin-top: 15px;">
                                                <label class="col-form-label"
                                                       for="attachment">
                                                    Attachment
                                                </label>
                                            </div>
                                            <div class="col-lg-7 col-md-8" style="margin-top: 15px;">
                                                <input type="file"
                                                       class="form-control o_website_form_input" multiple="true"
                                                       name="attachment"/>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="offset-lg-3 offset-md-4 col-md-8 col-lg-7">
                                                <a href="#"
                                                   role="button"
                                                   class="btn btn-primary btn-sm o_website_form_send">
                                                    Send
                                                </a>
                                                <span id="o_website_form_result"></span>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <t t-call="website.company_description"/>
                            </div>
                        </div>
                    </div>
                    <div class="oe_structure mt-2"/>
                </div>
            </t>
        </template>

    </data>

</odoo>
