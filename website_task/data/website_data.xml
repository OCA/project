<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project.model_project_task" model="ir.model">
            <field name="website_form_default_field_id" ref="project.field_project_task_description" />
            <field name="website_form_access">True</field>
            <field name="website_form_label">Create a Task</field>
        </record>
        <function model="ir.model.fields" name="formbuilder_whitelist">
            <value>project.task</value>
            <value eval="[
                'description',
                'name',
                'mail_addresses',
                'project_id',
                'priority'
            ]"/>
        </function>
    </data>
    <data noupdate="1">
      <record id="menu_tasks" model="website.menu">
          <field name="name">Tasks</field>
          <field name="parent_id" ref="website.main_menu"/>
          <field name="sequence" type="int">40</field>
      </record>
      <record id="menu_my_tasks" model="website.menu">
          <field name="name">My Tasks</field>
          <field name="url">/my/tasks</field>
          <field name="parent_id" ref="menu_tasks"/>
          <field name="sequence" type="int">40</field>
      </record>
      <record id="menu_new_task" model="website.menu">
          <field name="name">New Task</field>
          <field name="url">/task/new</field>
          <field name="parent_id" ref="menu_tasks"/>
          <field name="sequence" type="int">40</field>
      </record>

        <record id="action_open_website" model="ir.actions.act_url">
            <field name="name">New Task</field>
            <field name="target">self</field>
            <field name="url">/task/new</field>
        </record>
        <record id="base.open_menu" model="ir.actions.todo">
            <field name="action_id" ref="action_open_website"/>
            <field name="state">open</field>
        </record>
    </data>

</odoo>
