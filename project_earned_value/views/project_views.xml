<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="task_type_edit" model="ir.ui.view">
            <field name="name">project.task.type.form.inherit</field>
            <field name="model">project.task.type</field>
            <field name="inherit_id" ref="project.task_type_edit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='mail_template_id']" position="after" >
                    <field name="ev_percent"/>
                </xpath>
            </field>
        </record>
        <template id="timesheet_plan_inherit" inherit_id="sale_timesheet.timesheet_plan">
            <xpath expr="//div[hasclass('o_timesheet_plan_sale_timesheet_people_time')]" position="after">
                <div class="o_timesheet_plan_sale_timesheet_earned_value_analysis">
                    <h3>Earned Value Analysis</h3>
                    <table width="100%" border="1" cellpadding="4" style="min-width: 100%; background-color: white; border-collapse:collapse;">
                        <thead style="background-color: white;color: black;text-align: center;">
                            <tr>
                                <th>
                                    Planned Value
                                </th>
                                <th>
                                    Earned Value
                                </th>
                                <th>
                                    Actual Cost
                                </th>
                                <th>
                                    Schedule Variance
                                </th>
                                <th>
                                    Cost Variance
                                </th>
                            </tr>
                        </thead>
                        <tbody style="text-align: center;">
                            <t t-foreach="earned_value" t-as="value">
                                <tr>
                                    <td class="o_timesheet_plan_dashboard_cell">
                                        <t t-esc="earned_value[value]['planned_value']" />
                                    </td>
                                    <td class="o_timesheet_plan_dashboard_cell">
                                        <t t-esc="earned_value[value]['earned_value']" />
                                    </td>
                                    <td class="o_timesheet_plan_dashboard_cell">
                                        <t t-esc="earned_value[value]['actual_cost']" />
                                    </td>
                                    <td class="o_timesheet_plan_dashboard_cell">
                                        <t t-esc="earned_value[value]['schedule_variance']" />
                                    </td>
                                    <td class="o_timesheet_plan_dashboard_cell">
                                        <t t-esc="earned_value[value]['cost_variance']" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                <p></p>
            </xpath>
        </template>
</odoo>
